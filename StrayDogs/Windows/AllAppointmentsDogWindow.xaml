<Window x:Class="StrayDogs.Windows.AllAppointmentsDogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StrayDogs.Windows"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="История лечения собаки" Height="450" Width="800">
    <Grid Background="#F4F7EE">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Viewbox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4">
            <Canvas Width="600" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="История лечения" Foreground="#16343C" FontSize="30" Opacity="0.9"
            FontWeight="Bold"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" Canvas.Left="197" Canvas.Top="-12"></TextBlock>
            </Canvas>
        </Viewbox>

        <Viewbox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3">
            <Canvas Width="600" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <ComboBox
HorizontalAlignment="Left" Canvas.Left="63" VerticalAlignment="Center" Width="438"
materialDesign:HintAssist.Hint="Сортировка по дате"
Style="{StaticResource MaterialDesignOutlinedComboBox}">
                    <ComboBoxItem
    Content="Сегодня" />
                    <ComboBoxItem
    Content="Вчера" />
                    <ComboBoxItem
    Content="Последняя неделя" />
                    <ComboBoxItem
Content="Последний месяц" />
                    <ComboBoxItem
Content="Последний год" />
                    <ComboBoxItem
Content="Все" />
                </ComboBox>
            </Canvas>
        </Viewbox>
        <Viewbox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Margin="25,0,0,60" VerticalAlignment="Top"
                 >
            <Canvas Width="600" Height="20" HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                <ListView x:Name="PriemsLv" 
                        Margin="0 0 0 0" 
                        SelectedIndex="0" 
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden" 
                        Width="950" 
                        Height="200" 
                        Background="#8BA598"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                        d:ItemsSource="{d:SampleData ItemCount=5}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#3C5D6C"
                                  Background="#3C5D6C"
                                  Margin="0,0,5,0"
                                  BorderThickness="0.1"
                                  CornerRadius="5"
                                  Padding="12">
                                <StackPanel Orientation="Horizontal" Width="400" Height="55" Margin="0,1,0,0">
                                    <StackPanel Width="360" Height="70" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding .}" Margin="5,0,0,0" Foreground="#F4F7EE" 
                                                 HorizontalAlignment="Left" FontSize="14" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding .}" Margin="5,0,0,0" Foreground="#F4F7EE" 
                                                 HorizontalAlignment="Left" FontSize="14" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding .}" Margin="5,0,0,0" Foreground="#F4F7EE" 
                                                 HorizontalAlignment="Left" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button HorizontalAlignment="Right" Background="#F4F7EE" Foreground="#16343C" BorderBrush="Transparent"
IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}"
ToolTip="MaterialDesignFloatingActionMiniDarkButton">
                                            <materialDesign:PackIcon HorizontalAlignment="Right"                                                                  
                                              Width="25"
                                              Height="25"
                                              Kind="Pencil" />
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Canvas>
        </Viewbox>
    </Grid>
</Window>
