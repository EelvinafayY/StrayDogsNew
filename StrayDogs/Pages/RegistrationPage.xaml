<Page x:Class="StrayDogs.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StrayDogs.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Регистрация">

    <Grid Background="#F4F7EE">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Viewbox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4">
            <Canvas Width="600" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="РЕГИСТРАЦИЯ" Foreground="#16343C" FontSize="30" Opacity="0.9"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" Canvas.Left="187" Canvas.Top="-10"></TextBlock>
            </Canvas>
        </Viewbox>

        <Viewbox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
            <Canvas Width="600" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <materialDesign:AutoSuggestBox
  materialDesign:HintAssist.Hint="Фамилия"
  materialDesign:TextFieldAssist.HasClearButton="True"
  DropDownElevation="Dp0"
  Style="{StaticResource MaterialDesignOutlinedAutoSuggestBox}"
  Suggestions="{Binding AutoSuggestBox2Suggestions}"
  Text="{Binding AutoSuggestBox2Text, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
  ValueMember="Key" HorizontalAlignment="Left" Canvas.Left="63" VerticalAlignment="Center" Width="438">
                    <materialDesign:AutoSuggestBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <Border
          Width="20"
          Height="20"
          Background="{Binding Value, Converter={StaticResource ColorToBrushConverter}}"
          CornerRadius="10" />
                                <TextBlock
          Margin="10,0,0,0"
          Text="{Binding Key}" />
                            </DockPanel>
                        </DataTemplate>
                    </materialDesign:AutoSuggestBox.ItemTemplate>
                </materialDesign:AutoSuggestBox>
            </Canvas>
        </Viewbox>

        <Viewbox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
            <Canvas Width="600" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <materialDesign:AutoSuggestBox
  materialDesign:HintAssist.Hint="Имя"
  materialDesign:TextFieldAssist.HasClearButton="True"
  DropDownElevation="Dp0"
  Style="{StaticResource MaterialDesignOutlinedAutoSuggestBox}"
  Suggestions="{Binding AutoSuggestBox2Suggestions}"
  Text="{Binding AutoSuggestBox2Text, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
  ValueMember="Key" HorizontalAlignment="Left" Canvas.Left="63" VerticalAlignment="Center" Width="438">
                    <materialDesign:AutoSuggestBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <Border
          Width="20"
          Height="20"
          Background="{Binding Value, Converter={StaticResource ColorToBrushConverter}}"
          CornerRadius="10" />
                                <TextBlock
          Margin="10,0,0,0"
          Text="{Binding Key}" />
                            </DockPanel>
                        </DataTemplate>
                    </materialDesign:AutoSuggestBox.ItemTemplate>
                </materialDesign:AutoSuggestBox>
            </Canvas>
        </Viewbox>

        <Viewbox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3">
            <Canvas Width="600" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <materialDesign:AutoSuggestBox
materialDesign:HintAssist.Hint="Отчество"
materialDesign:TextFieldAssist.HasClearButton="True"
DropDownElevation="Dp0"
Style="{StaticResource MaterialDesignOutlinedAutoSuggestBox}"
Suggestions="{Binding AutoSuggestBox2Suggestions}"
Text="{Binding AutoSuggestBox2Text, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
ValueMember="Key" HorizontalAlignment="Left" Canvas.Left="63" VerticalAlignment="Center" Width="438">
                    <materialDesign:AutoSuggestBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <Border
        Width="20"
        Height="20"
        Background="{Binding Value, Converter={StaticResource ColorToBrushConverter}}"
        CornerRadius="10" />
                                <TextBlock
        Margin="10,0,0,0"
        Text="{Binding Key}" />
                            </DockPanel>
                        </DataTemplate>
                    </materialDesign:AutoSuggestBox.ItemTemplate>
                </materialDesign:AutoSuggestBox>
            </Canvas>
        </Viewbox>

        <Viewbox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3">
            <Canvas Width="600" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <DatePicker
  Width="438"
  materialDesign:HintAssist.Hint="Дата рождения"
  Style="{StaticResource MaterialDesignOutlinedDatePicker}" HorizontalAlignment="Left" Canvas.Left="63" VerticalAlignment="Center" />
            </Canvas>
        </Viewbox>

        <Viewbox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3">
            <Canvas Width="600" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <materialDesign:AutoSuggestBox
materialDesign:HintAssist.Hint="Логин"
materialDesign:TextFieldAssist.HasClearButton="True"
DropDownElevation="Dp0"
Style="{StaticResource MaterialDesignOutlinedAutoSuggestBox}"
Suggestions="{Binding AutoSuggestBox2Suggestions}"
Text="{Binding AutoSuggestBox2Text, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
ValueMember="Key" HorizontalAlignment="Left" Canvas.Left="63" VerticalAlignment="Center" Width="438">
                    <materialDesign:AutoSuggestBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <Border
        Width="20"
        Height="20"
        Background="{Binding Value, Converter={StaticResource ColorToBrushConverter}}"
        CornerRadius="10" />
                                <TextBlock
        Margin="10,0,0,0"
        Text="{Binding Key}" />
                            </DockPanel>
                        </DataTemplate>
                    </materialDesign:AutoSuggestBox.ItemTemplate>
                </materialDesign:AutoSuggestBox>
            </Canvas>
        </Viewbox>

        <Viewbox Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3">
            <Canvas Width="600" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <materialDesign:AutoSuggestBox
materialDesign:HintAssist.Hint="Пароль"
materialDesign:TextFieldAssist.HasClearButton="True"
DropDownElevation="Dp0"
Style="{StaticResource MaterialDesignOutlinedAutoSuggestBox}"
Suggestions="{Binding AutoSuggestBox2Suggestions}"
Text="{Binding AutoSuggestBox2Text, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
ValueMember="Key" HorizontalAlignment="Left" Canvas.Left="63" VerticalAlignment="Center" Width="438">
                    <materialDesign:AutoSuggestBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <Border
        Width="20"
        Height="20"
        Background="{Binding Value, Converter={StaticResource ColorToBrushConverter}}"
        CornerRadius="10" />
                                <TextBlock
        Margin="10,0,0,0"
        Text="{Binding Key}" />
                            </DockPanel>
                        </DataTemplate>
                    </materialDesign:AutoSuggestBox.ItemTemplate>
                </materialDesign:AutoSuggestBox>
            </Canvas>
        </Viewbox>

        <Viewbox Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3" Grid.RowSpan="4">
            <Canvas Width="600" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="/Image/logoMenu.png"
Height="250"
Width="250" Canvas.Left="200" Canvas.Top="-90">
                    <Image.Clip>
                        <RectangleGeometry RadiusX="240" RadiusY="240" Rect="0,0,240,240"/>
                    </Image.Clip>
                </Image>
            </Canvas>
        </Viewbox>
    </Grid>
</Page>
