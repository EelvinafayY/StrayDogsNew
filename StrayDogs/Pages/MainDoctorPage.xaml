<Page x:Class="StrayDogs.Pages.MainDoctorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StrayDogs.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главная страница доктора">

    <Grid>
        <Grid Background="#F4F7EE">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Viewbox Grid.Column="1" Grid.ColumnSpan="3" Margin="30,4,0,156" Grid.Row="0" Grid.RowSpan="2" VerticalAlignment="Center">
                <Canvas Width="600" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Здравствуйте, Имя врача" Foreground="#16343C" FontSize="28" Opacity="0.9"/>
                </Canvas>
            </Viewbox>

            <Viewbox Grid.Column="1" Grid.ColumnSpan="3" Margin="30,20,0,0" Grid.Row="0" Grid.RowSpan="2" VerticalAlignment="Center">
                <Canvas Width="600" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Какая-то маленькая подпись" Foreground="#16343C" FontSize="12" Opacity="0.9"/>
                </Canvas>
            </Viewbox>


            <Viewbox Grid.Column="3" Grid.ColumnSpan="2" Margin="0,4,0,156" Grid.Row="0" Grid.RowSpan="2" VerticalAlignment="Center">
                <Canvas Width="600" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Orientation="Vertical" Width="320" Height="140" Margin="5,10,10,0">
                        <Border BorderBrush="#8BA598" 
                                            Background="#8BA598" 
                                            Opacity="0.8" 
                                            BorderThickness="1" 
                                            CornerRadius="10" 
                                            Padding="20">
                            <StackPanel Width="280" Height="85">
                                <TextBlock Text="Снова некоторая информация" Width="300" TextWrapping="Wrap" FontSize="22" Foreground="#F4F7EE" Margin="0,0,0,0"/>
                                <TextBlock FontWeight="Bold" Text="Цифра текст" Width="300" TextWrapping="Wrap" FontSize="16" Foreground="#16343C" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Canvas>
            </Viewbox>

            <Viewbox Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2" Margin="30, 0,0,40">
                <Canvas Width="400" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Margin="50 20 0 0" Text="Фамилия Имя Отчество" Foreground="#16343C" FontSize="20" Opacity="0.9"/>
                        <Image Source="/Image/logoMenu.png" 
     Height="50" 
     Width="50" 
                           Margin="10">
                            <Image.Clip>
                                <RectangleGeometry RadiusX="50" RadiusY="50" Rect="0,0,50,50"/>
                            </Image.Clip>
                        </Image>
                        <Button 
                        Background="Transparent" 
  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" 
  Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}" 
  ToolTip="MaterialDesignFloatingActionMiniLightButton">
                            <materialDesign:PackIcon 
    Width="20" 
    Height="20" 
    Kind="ArrowBack"  
                            Foreground="#16343C"/>
                        </Button>
                    </StackPanel>
                </Canvas>
            </Viewbox>

            <Viewbox Grid.Column="1" Grid.ColumnSpan="3" Margin="30,4,0,156" Grid.Row="1" Grid.RowSpan="2" VerticalAlignment="Center">
                <Canvas Width="600" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Приемы" Foreground="#16343C" FontSize="24" Opacity="0.9"/>
                </Canvas>
            </Viewbox>

            <Viewbox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Margin="25,0,0,60" VerticalAlignment="Top">
                <Canvas Width="600" Height="20" HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <ListView x:Name="PriemsLv" 
                          Margin="0 0 0 0" 
                          SelectedIndex="0" 
                          ScrollViewer.HorizontalScrollBarVisibility="Hidden" 
                          Width="950" 
                          Height="200" 
                          Background="#8BA598"
                          ScrollViewer.VerticalScrollBarVisibility="Hidden"
                          d:ItemsSource="{d:SampleData ItemCount=5}">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="2"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#3C5D6C"
                                    Background="#3C5D6C"
                                    Margin="0,0,5,0"
                                    BorderThickness="0.1"
                                    CornerRadius="5"
                                    Padding="12">
                                    <StackPanel Orientation="Horizontal" Width="400" Height="55" Margin="0,1,0,0">
                                        <StackPanel Width="360" Height="70" HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding .}" Margin="5,0,0,0" Foreground="#F4F7EE" 
                                                   HorizontalAlignment="Left" FontSize="14" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding .}" Margin="5,0,0,0" Foreground="#F4F7EE" 
                                                   HorizontalAlignment="Left" FontSize="14" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding .}" Margin="5,0,0,0" Foreground="#F4F7EE" 
                                                   HorizontalAlignment="Left" FontSize="14" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button HorizontalAlignment="Right" Background="#F4F7EE" Foreground="#16343C" BorderBrush="Transparent"
  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
  Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}"
  ToolTip="MaterialDesignFloatingActionMiniDarkButton">
                                                <materialDesign:PackIcon HorizontalAlignment="Right"                                                                  
                                                Width="25"
                                                Height="25"
                                                Kind="Pencil" />
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Canvas>
            </Viewbox>

            <Viewbox Grid.Row="3" Grid.RowSpan="2" Grid.Column="5" Margin="0,41,30,4">
                <Canvas Width="200" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid
Width="200">
                        <Button
                        x:Name="AddDogBT"
                      Background="#16343C"
                       Foreground="#F4F7EE"
                        Margin="0 80 0 0"
  Height="35"
  materialDesign:ButtonAssist.CornerRadius="15"
  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
  Style="{StaticResource MaterialDesignRaisedDarkButton}"
  ToolTip="MaterialDesignRaisedDarkButton with Round Corners">
                            <TextBlock
    Text="Сохранить как хл" />
                        </Button>
                    </Grid>
                    <Grid
Width="200">
                        <Button
                        x:Name="AddEmployeeBT"
                      Background="#16343C"
                       Foreground="#F4F7EE"
                        Margin="0 130 0 0"
  Height="35"
  materialDesign:ButtonAssist.CornerRadius="15"
  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
  Style="{StaticResource MaterialDesignRaisedDarkButton}"
  ToolTip="MaterialDesignRaisedDarkButton with Round Corners">
                            <TextBlock
    Text="Сохранить как пдф" />
                        </Button>
                    </Grid>
                </Canvas>
            </Viewbox>

        </Grid>
    </Grid>
</Page>
