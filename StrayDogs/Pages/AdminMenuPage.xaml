<Page x:Class="StrayDogs.Pages.AdminMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StrayDogs.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Меню администратора">

    <Grid Background="#F4F7EE">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <materialDesign:Card>
            <TabControl 
                  VerticalContentAlignment="Top" 
                  materialDesign:ColorZoneAssist.Mode="PrimaryMid" 
                  Style="{StaticResource MaterialDesignNavigationRailTabControl}">
                <TabItem x:Name="HomeTI" MouseDoubleClick="HomeTI_MouseDoubleClick">
                    <TabItem.Header>
                        <StackPanel 
                            Width="auto" 
                            Height="auto">
                            <materialDesign:PackIcon 
                                  Width="24" 
                                  Height="24" 
                                  HorizontalAlignment="Center" 
                                  Kind="Home" />
                            <TextBlock 
                                  HorizontalAlignment="Center" 
                                  Text="Дом" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>
                <TabItem x:Name="DogTI" MouseDoubleClick="DogTI_MouseDoubleClick">
                    <TabItem.Header>
                        <StackPanel 
                                    Width="auto" 
                                    Height="auto">
                            <materialDesign:PackIcon 
                                      Width="24" 
                                      Height="24" 
                                      HorizontalAlignment="Center" 
                                      Kind="DogSide" />
                            <TextBlock 
                                      HorizontalAlignment="Center" 
                                      Text="Собаки" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>
                <TabItem x:Name="AppointmentsTI" MouseDoubleClick="AppointmentsTI_MouseDoubleClick">
                    <TabItem.Header>
                        <StackPanel 
                    Width="auto" 
                    Height="auto">
                            <materialDesign:PackIcon 
                      Width="24" 
                      Height="24" 
                      HorizontalAlignment="Center" 
                      Kind="CalendarMultiselect" />
                            <TextBlock 
                      HorizontalAlignment="Center" 
                      Text="Записи" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>
                <TabItem x:Name="EmployeeTI" MouseDoubleClick="EmployeeTI_MouseDoubleClick">
                    <TabItem.Header>
                        <StackPanel 
    Width="auto" 
    Height="auto">
                            <materialDesign:PackIcon 
      Width="24" 
      Height="24" 
      HorizontalAlignment="Center" 
      Kind="AccountGroup" />
                            <TextBlock 
      HorizontalAlignment="Center" 
      Text="Сотрудники" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>
                <TabItem x:Name="AccountTI" MouseDoubleClick="AccountTI_MouseDoubleClick">
                    <TabItem.Header>
                        <StackPanel 
                            Width="auto" 
                            Height="auto">
                            <materialDesign:PackIcon 
                                  Width="24" 
                                  Height="24" 
                                  HorizontalAlignment="Center" 
                                  Kind="Account" />
                            <TextBlock 
                                  HorizontalAlignment="Center" 
                                  Text="Аккаунт" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>
            </TabControl>
        </materialDesign:Card>

        <Frame Grid.Column="1"
             x:Name="ContentDoctorFrame">
        </Frame>
    </Grid>
</Page>
